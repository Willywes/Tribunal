<Window x:Class="WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="300" ResizeMode="NoResize">
    <Grid>
        <Image x:Name="image" Margin="46,28,45,297" Source="images/pj.png" Stretch="Fill"/>
        <Label x:Name="label" Content="ACCESO USUARIOS" HorizontalAlignment="Center" Height="29" Margin="88,145,82,0" VerticalAlignment="Top" Width="122"/>
        <TextBox x:Name="txtUser" HorizontalAlignment="Left" Height="23" Margin="56,208,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="181" SpellCheck.IsEnabled="True" ToolTip="Ingrese Usuario"/>
        <PasswordBox x:Name="txtPass" HorizontalAlignment="Left" Margin="56,246,0,0" VerticalAlignment="Top" Width="181" Height="23" ToolTip="Ingrese Contraseña" Tag="Ingrese Contraseña"/>
        <Button x:Name="btnLogin" Content="Acceder" HorizontalAlignment="Left" Margin="56,286,0,0" VerticalAlignment="Top" Width="181" Height="23" IsCancel="True" Click="BtnLogin_Click"/>
        <Label x:Name="lblMessage" Content="" HorizontalAlignment="Left" Height="48" Margin="56,328,0,0" VerticalAlignment="Top" Width="181" Foreground="#FF831919"/>

    </Grid>
</Window>
